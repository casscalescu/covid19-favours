
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" } ) do |f| %>
  <h2>Log in</h2>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form--text-input" },
                label_html: { class: "form--text-label" },
                wrapper_html: { class: "form--text-wrapper" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form--text-input" },
                label_html: { class: "form--text-label" },
                wrapper_html: { class: "form--text-wrapper" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
