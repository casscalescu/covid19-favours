<h1>Edit Favour</h1>

<%= simple_form_for @favour do |f| %>
  <%= f.input :category %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.date_field :completion_date, min: Date.today + 1, required: true %>
  <%= f.button :submit, 'Update', class: "btn btn-primary" %>
<% end %>
